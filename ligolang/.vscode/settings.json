{
    "files.autoSave": "afterDelay",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.tabSize": 2,
    "git.autofetch": true,
    "ocaml.sandbox": {
        "kind": "esy",
        "root": "${workspaceFolder:ligolang}"
    },
    "files.insertFinalNewline": true,
    "files.watcherExclude": {
        "**/_opam/**": true,
        "**/_build/**": true,
        "**/changelog/**": true,
        "**/gitlab-pages/**": true,
        "**/_esy/**": true,
        "**/node_modules/**": true,
    }
}
